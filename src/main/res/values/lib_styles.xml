<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LibSelectAccountTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#242424</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LibEditTextBaseStyle">

        <!-- api 12 -->
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/lib_black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/lib_black_hint</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <style name="LibEditTextStyle" parent="LibEditTextBaseStyle">
        <item name="android:background">@color/lib_edit_text_background</item>
    </style>

    <style name="LibTextStyle_PersonCenter">
        <item name="android:textColor">#242424</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="LibButtonStyle_PersonCenter" parent="LibTextStyle_PersonCenter">
        <item name="android:layout_height">35dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/lib_button_white_selector</item>
    </style>

    <style name="LibButtonStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/lib_white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="DeleteUserAccountDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>